rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Base rule - default deny
    match /{document=**} {
      allow read, write: if false;
    }
    
    // Users collection
    match /users/{userId} {
      // Allow users to read and write their own document
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // Allow access to the user's debts subcollection
      match /debts/{debtId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }
    
    // Allow any authenticated user to read the users collection
    // This is needed for profile lookups
    match /users/{userId} {
      allow read: if request.auth != null;
    }
    
    // Usernames collection (for username lookup)
    match /usernames/{username} {
      // Allow anyone to read usernames for checking availability
      allow read: if true;
      
      // For creating new username entries:
      // 1. User must be authenticated
      // 2. Allow creation if the document doesn't exist yet
      // 3. Allow updates only if you own the username (uid matches auth.uid)
      // 4. Ensure data has a uid field matching the current user
      allow create: if request.auth != null && 
                      !exists(/databases/$(database)/documents/usernames/$(username)) && 
                      request.resource.data.uid == request.auth.uid;
                      
      allow update, delete: if request.auth != null &&
                             resource.data.uid == request.auth.uid;
    }
  }
} 